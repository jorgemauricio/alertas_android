<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prado.Barrenador_del_RUEZNO">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_alertas"
        android:label="Alert-Ruezno"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/Ruezno"/>

        <activity android:name="com.example.prado.Barrenador_del_RUEZNO.Inicio"
            android:configChanges="orientation|screenSize">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name="com.example.prado.Barrenador_del_RUEZNO.Mapa"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name="com.example.prado.Barrenador_del_RUEZNO.Informacion_Estacion"
            android:configChanges="orientation|screenSize"></activity>

        <provider
            android:name="com.example.prado.Barrenador_del_RUEZNO.GenericFileProvider"
            android:authorities="com.example.prado.Barrenador_del_RUEZNO"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

    </application>

</manifest>